{{#with schedule}}
<section>
  <div class="container">
    <div class="row aling-items-center mb-4">
      <div class="col">
        <h2 class="h1 mb-sm-0">Schedule</h2>
      </div>
      <div class="col-auto">
      </div>
    </div>
    <div class="row no-gutters d-none d-md-flex bg-white py-3">
      <div class="col-xl-3 col-md-3">
        <span class="h6 mb-0 text-muted">Topic</span>
      </div>
      <div class="col col-md-6">
        <span class="h6 mb-0 text-muted">Description</span>
      </div>
      <div class="col">
        <span class="h6 mb-0 text-muted">Time</span>
      </div>
    </div>
    <div class="tab-content" data-aos="fade-up">
      <div id="in_person" class="list-group list-group-flush tab-pane fade show active" role="tabpanel" aria-labelledby="day-one-tab">
        {{#each events}}
        {{#if link.has_link}}
        <a href="{{link.url}}" class="list-group-item list-group-item-action row no-gutters align-items-center py-3">
          <div class="col-xl-3 col-md-3">
            <h5 class="mb-0">{{name}}</h5>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-center mt-2 mt-md-0">
              <span class="mb-0">{{{description}}}</span>
            </div>
          </div>
          <div class="col-md">
            <span>{{time}}</span>
          </div>
        </a>
        {{else}}
        <div href="{{link.url}}" class="list-group-item list-group-item-action row no-gutters align-items-center py-3">
          <div class="col-xl-3 col-md-3">
            <h5 class="mb-0">{{name}}</h5>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-center mt-2 mt-md-0">
              <span class="mb-0">{{{description}}}</span>
            </div>
          </div>
          <div class="col-md">
            <span>{{time}}</span>
          </div>
        </div>
        {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</section>
{{/with}}